prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
docdir=@datadir@/doc/HamFax
qmdir=@datadir@/HamFax
INSTALL=@INSTALL@

.PHONY: all binary clean doc distclean install uninstall translations

all: binary translations

binary:
	$(MAKE) --directory src/ binary

translations:
	$(MAKE) --directory po/ translations

doc:
	$(MAKE) --directory doc/ doc

clean:
	rm -rfv moc_bnv_qt_test.*
	$(MAKE) --directory src/ clean
	$(MAKE) --directory po/ clean
	$(MAKE) --directory doc/ clean

distclean: clean
	rm -rfv Makefile config.cache config.log config.status
	$(MAKE) --directory src/ distclean
	$(MAKE) --directory po/ distclean
	$(MAKE) --directory doc/ distclean

install: binary translations
	$(INSTALL) -o root -g root -m 0755 -d $(bindir)
	$(INSTALL) -o root -g root -m 0755 -s src/hamfax $(bindir)
	$(INSTALL) -o root -g root -m 0755 -d $(docdir)
	$(INSTALL) -o root -g root -m 0644 doc/HamFax.html $(docdir)
	$(INSTALL) -o root -g root -m 0755 -d $(qmdir)
	$(INSTALL) -o root -g root -m 0644 po/hamfax_de.qm $(qmdir)

uninstall:
	rm -rfv $(bindir)/hamfax $(docdir)/HamFax.html $(qmdir)/hamfax_de.qm
	rmdir -p $(bindir) $(docdir) $(qmdir)
